@using WebSite.ViewModels
@model CarsListViweModel
@{
    ViewData["Title"] = "Авто";
}
<!DOCTYPE html>

<html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>ListCar</title>
    </head>
    <body>

    <h1>Все автомобили</h1>
    <h3>@ViewBag.Tatel </h3>
    <div class="row mt-5 mb2">
    <h3>@Model.currCategory</h3>
        @{
            foreach(var car in Model.allCars){
                <div class="col-lg-4">
                <img class="img-thumbnail" src="@car.img" alt="@car.name"/>
                <h2>  @car.name</h2>
                <p>@car.shortDesc</p>
                <p>Цена: @car.price.ToString("c")</p>
                <p><a class="btn btn-warning" href="#">Подробнее</a></p>
                </div>
            }
        }
    </div>
    </body>
</html>